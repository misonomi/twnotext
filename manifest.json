{
  "manifest_version": 2,
  "name": "Twitter No Text",
  "version": "1.3",

  "description": "Removes all tweet's texts from your twitter",

  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16-mono.png",
      "32": "icons/32-mono.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "css": ["notext.css"]
    }
  ]
}